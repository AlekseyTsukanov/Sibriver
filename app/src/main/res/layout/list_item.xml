<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameTv"
            android:text="@string/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_marginStart="16dp"
            style="@style/Base.TextAppearance.AppCompat.Headline"/>

        <TextView
            android:id="@+id/addressTv"
            android:text="@string/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_below="@+id/nameTv"
            android:layout_alignParentStart="true"
            style="@style/Base.TextAppearance.AppCompat.Subhead"/>
        <TextView
            android:id="@+id/statusTv"
            android:text="@string/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@+id/addressTv"
            android:layout_alignStart="@+id/addressTv" />

        <TextView
            android:id="@+id/createdTv"
            android:text="@string/createdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/addressTv"
            android:layout_alignParentEnd="true"
            android:paddingBottom="16dp"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="#ff2196f3" />

    </RelativeLayout>

    <View
        android:id="@+id/selectedOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/SelectedOverlay"
        android:visibility="invisible" />

</android.support.v7.widget.CardView>